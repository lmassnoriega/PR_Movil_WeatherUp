<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/today_weather" android:minWidth="150dp" android:minHeight="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/today_CityName"
                android:editable="false"
                android:textSize="24dp" android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:id="@+id/today_desc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/today_CityTemp"
                android:editable="false"
                android:textSize="24dp" android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="260dp" android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Get Current Weather"
        android:id="@+id/button"
        android:onClick="DoMagic" android:layout_marginTop="20dp" />


</LinearLayout>
